generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id  Int   @id @default(autoincrement())
  name        String
  description String?
  price       Int
  category  String
  soldAmount  Int?  @default(0)
} 

model ProductCategory {
  id    Int   @id @default(autoincrement())
  name  String    @unique
}

